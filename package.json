{
  "private": true,
  "main": "index.html",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "parcel build index.html",
    "fix": "run-p fix:* --continue-on-error",
    "fix:scripts": "run-s \"lint:scripts --fix\"",
    "fix:styles": "run-s \"lint:styles --fix\" \"lint:styles --fix\"",
    "format": "run-s \"format-check --write\"",
    "format-check": "prettier --ignore-path .gitignore . --check",
    "lint": "run-p lint:* --continue-on-error",
    "lint:scripts": "eslint --ignore-path .gitignore .",
    "lint:styles": "stylelint --ignore-path .gitignore \"**/*.css\"",
    "start": "parcel index.html --open"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.4",
    "prettier-plugin-package": "^1.0.0",
    "stylelint": "^13.3.2",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-twbs-bootstrap": "^2.0.1",
    "stylelint-prettier": "^1.1.2"
  }
}
