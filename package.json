{
  "private": true,
  "main": "index.html",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "parcel build index.html",
    "format": "yarn format-check --write",
    "format-check": "prettier --ignore-path .gitignore \"**/*.{html,json,md}\" --check",
    "lint": "npm-run-all lint:*",
    "lint-fix": "npm-run-all lint-fix:*",
    "lint-fix:scripts": "yarn lint:scripts --fix",
    "lint-fix:styles": "yarn lint:styles --fix && yarn lint:styles --fix",
    "lint:scripts": "eslint --ignore-path .gitignore --ignore-pattern \"!.*\" \".\"",
    "lint:styles": "stylelint --ignore-path .gitignore \"**/*.css\"",
    "start": "parcel index.html --open",
    "test": "npm-run-all test:*",
    "test:format": "yarn format-check",
    "test:lint": "yarn lint"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.19.1",
    "prettier-plugin-package": "^0.3.1",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-twbs-bootstrap": "^2.0.0",
    "stylelint-prettier": "^1.1.2"
  }
}
